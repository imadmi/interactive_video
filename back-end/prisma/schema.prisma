model VideoAsk {
  id                 String     @unique
  title              String
  url                String
  questions          Question[]
}

model Question {
  id                 String     @id
  question           String
  next_video_id      String?
  videoAskId         String
  videoAsk           VideoAsk   @relation(fields: [videoAskId], references: [id])
}
